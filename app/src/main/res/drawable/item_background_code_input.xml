<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Состояние focused (выбрано) -->

    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/input_grey" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
            <item android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="60dp">
                <shape android:shape="oval">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Обычное состояние -->
    <item android:state_selected="true">
        <layer-list>
            <!-- Фон с обводкой -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/input_grey" />
                    <stroke android:width="2dp" android:color="@color/primary_green" /> <!-- Цвет обводки -->
                    <corners android:radius="40dp" />
                </shape>
            </item>
            <!-- Внутренний отступ -->
            <item android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="60dp">
                <shape android:shape="oval">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/input_grey" />
                    <corners android:radius="40dp" />
                </shape>
            </item>
            <item android:bottom="20dp" android:left="20dp" android:right="20dp" android:top="60dp">
                <shape android:shape="oval">
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>